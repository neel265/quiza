<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6D91AE"
    tools:context=".game">

    <RelativeLayout
        android:id="@+id/re"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingClass">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="65dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/less"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="82dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/imageView2"
            android:layout_alignRight="@+id/imageView2"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="-342dp"
            android:layout_marginRight="-342dp"
            android:gravity="center"
            android:text="exits"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="UnknownId" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="72dp"
            android:layout_marginEnd="0dp"
            android:gravity="center"
            android:text="Progress Result of the candidate"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/re">

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/circularProgressBar"
            android:layout_width="279dp"
            android:layout_height="254dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="122dp"
            android:layout_marginEnd="58dp"
            app:cpb_background_progressbar_color="@color/green"
            app:cpb_background_progressbar_width="20dp"
            app:cpb_progress="10"
            app:cpb_progress_direction="to_right"
            app:cpb_progress_max="20"

            app:cpb_progressbar_color="@color/red"
            app:cpb_progressbar_width="20dp"
            app:cpb_round_border="false" />

        <TextView
            android:id="@+id/result"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="146dp"
            android:layout_marginTop="220dp"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re3"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@+id/re2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="10dp"
        android:background="#28465E">

        <TextView
            android:id="@+id/share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="share youre score"
            android:textColor="@color/white"
            android:textSize="20sp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/re3"
        android:layout_marginTop="20dp"
        android:gravity="right">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="220dp"
            android:layout_height="173dp"
            app:srcCompat="@drawable/scree" />
    </RelativeLayout>

</RelativeLayout>
